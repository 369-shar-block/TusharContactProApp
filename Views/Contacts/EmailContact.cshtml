@{
}


<div class="card">
    <form asp-action="EmailContact" asp-controller="Contacts" method="post">
        <div class="card-header">
            <h3 class="heroTitle fs-4 mt-2">Email Contact: @Model.Contact!.FullName</h3>
        </div>
        <div class="card-body">
            <div class="row row-cols-1">
                <div class="col">
                    <label asp-for="@Model.EmailData!.EmailAddress" class="form-label">To: </label>
                    <textarea typeof="email" readonly class="form-control" asp-for="@Model.EmailData!.EmailAddress" rows="3" class="form-control" readOnly></textarea>
                </div>
                <div class="col">
                    <label asp-for="@Model.EmailData!.EmailSubject" class="form-label">Subject:</label>
                    <input type="text" class="form-control" asp-for="@Model.EmailData!.EmailSubject" />
                </div>
                <div class="col">
                    <label asp-for="@Model.EmailData!.EmailBody" class="form-label">Message: </label>
                    <textarea  class="form-control" asp-for="@Model.EmailData!.EmailBody" rows="5" required></textarea>
                </div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between p-3">
            <a asp-action="Index" asp-controller="Contacts" class="btn btn-outline-secondary rounded-pill btnLinks">Back</a>
            <button type="submit" class="btn btn-primary rounded-pill btnLinks">Send</button>
        </div>
    </form>
</div>